<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/icon_requirement"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_expire_date" />

    <LinearLayout
        android:id="@+id/layout_requirement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/icon_requirement"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_title"
            style="@style/CustomBodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/experience" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_title_requirements"
            style="@style/CustomBodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5-7 years" />
    </LinearLayout>

</RelativeLayout>