<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_company_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_driver_private_placeholder"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.ExtraLarge" />

    <com.google.android.material.textview.MaterialTextView
        style="@style/CustomBodyMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:text="Ena"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_custom_home_navigation_menu"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_alignBottom="@id/img_company_logo"/>

</RelativeLayout>