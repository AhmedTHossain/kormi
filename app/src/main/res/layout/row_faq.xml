<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_faq"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">
    <TextView
        android:id="@+id/text_ques"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="What is Nibay?"
        style="@style/CustomBodyLarge"
        android:drawableEnd="@drawable/ic_arrow_right"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1A000000"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/text_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nibay is a app for jobseekers in the transport industry."
        style="@style/CustomBodyLarge"
        android:visibility="visible"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:background="@drawable/bg_custom_home_navigation_menu"/>

</LinearLayout>