<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/bg_custom_home_navigation_menu">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_company_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_driver_private_placeholder"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.ExtraLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        android:layout_marginTop="5dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_job_title"
            style="@style/CustomBodyMediumBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Mechanic/Mistry" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_company_name"
            style="@style/CustomBodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="BRAC HQ" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_location" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_location"
                style="@style/CustomBodyMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:text="Dhaka" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_expire_date" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_expire_date"
                style="@style/CustomBodyMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="10dp"
                android:text="28-12-24" />

        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_application_status"
            style="@style/CustomBodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/applied"
            android:layout_gravity="end"
            android:padding="10dp"
            android:background="@drawable/bg_custom_text_greyed"
            app:textAllCaps="true"/>
    </LinearLayout>
</LinearLayout>