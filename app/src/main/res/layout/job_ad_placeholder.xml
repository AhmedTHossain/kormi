<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/bg_custom_home_navigation_menu"
    android:backgroundTint="@color/md_theme_primaryFixed">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_company_logo"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/md_theme_background"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.ExtraLarge" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

        <com.google.android.material.textview.MaterialTextView
            style="@style/CustomBodyMediumBold"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@color/md_theme_background"/>

        <com.google.android.material.textview.MaterialTextView
            style="@style/CustomBodyMedium"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@color/md_theme_background"/>

        <com.google.android.material.textview.MaterialTextView
            style="@style/CustomBodyMedium"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textColor="@color/md_theme_tertiary"
            android:padding="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_custom_text_highlight"
            app:textAllCaps="true"/>

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/md_theme_background">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/CustomBodyMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/md_theme_background">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/CustomBodyMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="10dp" />

        </LinearLayout>

<!--        <com.google.android.material.textview.MaterialTextView-->
