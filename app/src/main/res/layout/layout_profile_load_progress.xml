<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:background="@color/md_theme_primaryFixed">

    <!-- Profile Image Placeholder -->
    <View
        android:layout_width="275dp"
        android:layout_height="275dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@color/md_theme_background"
        android:scaleType="centerCrop"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/md_theme_background"
        android:clipToOutline="true"
        android:outlineProvider="background"/>

    <!-- Name Placeholder -->
    <View
        android:layout_width="200dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@color/md_theme_background" />

    <!-- Role Placeholder -->
    <View
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:background="@color/md_theme_background" />

    <!-- Rating Placeholder -->
    <View
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@color/md_theme_background" />

    <!-- Info Fields Placeholder -->
    <View
        android:layout_width="180dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/md_theme_background" />

    <View
        android:layout_width="180dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/md_theme_background" />

    <View
        android:layout_width="160dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/md_theme_background" />

    <!-- Location & Phone Placeholder -->
    <View
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_custom_home_navigation_menu"
        android:backgroundTint="@color/md_theme_background" />

    <!-- Review Section Title -->
    <View
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginTop="25dp"
        android:background="@color/md_theme_background" />

    <!-- RecyclerView Placeholder -->
    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="150dp"
        android:background="@color/md_theme_background" />

</LinearLayout>
